<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nguyennghia.circleimageview.MainActivity">

    <Button
        android:id="@+id/btn_single_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="SingleCircleImageTest" />

    <Button
        android:id="@+id/btn_listview_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="ListViewCircleTest" />

    <Button
        android:id="@+id/btn_chat_view"
        android:onClick="onClick"
        android:text="ChatViewTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <Button
        android:id="@+id/btn_ui_test"
        android:text="UITest"
        android:onClick="onClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_two_image"
        android:text="TwoCircleImageTest"
        android:layout_width="wrap_content"
        android:onClick="onClick"
        android:layout_height="wrap_content" />

</LinearLayout>
